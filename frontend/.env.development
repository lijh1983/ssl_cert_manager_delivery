# SSL证书自动化管理系统前端开发环境配置

# 应用基本配置
VITE_APP_TITLE=SSL证书自动化管理系统 (开发版)
VITE_APP_VERSION=1.0.0-dev
VITE_APP_DESCRIPTION=企业级SSL证书自动化管理解决方案 - 开发环境

# API配置
VITE_API_BASE_URL=http://localhost:5000/api
VITE_API_TIMEOUT=30000

# 认证配置
VITE_TOKEN_KEY=ssl_cert_manager_token_dev
VITE_TOKEN_EXPIRES_KEY=ssl_cert_manager_token_expires_dev
VITE_REFRESH_TOKEN_KEY=ssl_cert_manager_refresh_token_dev

# 功能开关
VITE_ENABLE_MOCK=false
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_CONSOLE_LOG=true
VITE_ENABLE_ERROR_TRACKING=false

# 主题配置
VITE_DEFAULT_THEME=light
VITE_THEME_COLOR=#409eff
VITE_SIDEBAR_LOGO=true

# 分页配置
VITE_DEFAULT_PAGE_SIZE=20
VITE_PAGE_SIZES=10,20,50,100

# 文件上传配置
VITE_UPLOAD_MAX_SIZE=10485760
VITE_UPLOAD_ALLOWED_TYPES=.crt,.key,.pem,.csr

# 证书配置
VITE_CERT_EXPIRY_WARNING_DAYS=30
VITE_CERT_EXPIRY_DANGER_DAYS=7
VITE_CERT_EXPIRY_CRITICAL_DAYS=3

# 刷新配置
VITE_AUTO_REFRESH_INTERVAL=300000
VITE_HEARTBEAT_INTERVAL=60000

# 缓存配置
VITE_CACHE_ENABLED=false
VITE_CACHE_EXPIRES=3600000

# 错误处理配置
VITE_ERROR_RETRY_COUNT=3
VITE_ERROR_RETRY_DELAY=1000

# 性能配置
VITE_LAZY_LOADING=false
VITE_CHUNK_SIZE_WARNING_LIMIT=1000

# 安全配置
VITE_ENABLE_CSP=false
VITE_ENABLE_HTTPS_REDIRECT=false

# 监控配置
VITE_ENABLE_PERFORMANCE_MONITORING=false
VITE_ENABLE_ERROR_REPORTING=false

# 国际化配置
VITE_DEFAULT_LOCALE=zh-CN
VITE_AVAILABLE_LOCALES=zh-CN,en-US

# 构建配置
VITE_BUILD_SOURCEMAP=true
VITE_BUILD_MINIFY=false
VITE_BUILD_GZIP=false

# CDN配置
VITE_CDN_ENABLED=false
VITE_CDN_BASE_URL=

# 第三方服务配置
VITE_SENTRY_DSN=
VITE_GOOGLE_ANALYTICS_ID=

# WebSocket配置
VITE_WS_ENABLED=true
VITE_WS_URL=ws://localhost:5000/ws
VITE_WS_RECONNECT_INTERVAL=5000
VITE_WS_MAX_RECONNECT_ATTEMPTS=5

# 通知配置
VITE_NOTIFICATION_ENABLED=true
VITE_NOTIFICATION_POSITION=top-right
VITE_NOTIFICATION_DURATION=3000

# 表格配置
VITE_TABLE_STRIPE=true
VITE_TABLE_BORDER=true
VITE_TABLE_SIZE=default

# 表单配置
VITE_FORM_LABEL_WIDTH=120px
VITE_FORM_SIZE=default
VITE_FORM_VALIDATE_ON_RULE_CHANGE=true

# 路由配置
VITE_ROUTER_MODE=history
VITE_ROUTER_BASE=/
VITE_ROUTER_STRICT=false

# 开发工具配置
VITE_DEVTOOLS_ENABLED=true
VITE_MOCK_ENABLED=false
VITE_DEBUG_ENABLED=true

# 热重载配置
VITE_HMR_ENABLED=true
VITE_HMR_PORT=3000

# 代理配置
VITE_PROXY_ENABLED=true
VITE_PROXY_TARGET=http://localhost:5000

# 开发服务器配置
VITE_DEV_SERVER_HOST=localhost
VITE_DEV_SERVER_PORT=3000
VITE_DEV_SERVER_OPEN=true
VITE_DEV_SERVER_CORS=true
